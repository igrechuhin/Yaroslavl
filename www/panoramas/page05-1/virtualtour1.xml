<?xml version="1.0" encoding="UTF-8"?>
<!-- for xml compliance -->
<krpano version="1.0.8.14">
    <!-- actions to perform while loading -->
    <events onxmlcomplete="onxmlcompleteaction();"/>
    <action name="onxmlcompleteaction">
		unselectmapspotsbutpassed();
		selectmapspot(mapspot0,-3);
	</action>
    <action name="playpanosounds">
		playbackgroundsound(none);
	</action>
    <action name="stoppanosounds">
		stopbackgroundsound();
	</action>
    <action name="closepanoobjects">
	</action>
    <!--************** Панорама *******************************************************************-->
    <!-- @File="virtualtour1.xml" @PanoName="trans_2_Panorama" @FilePath="/Users/Ilya/Desktop/Ярославль - панорамы/Trans 1/trans_2_Panorama.psd" -->
    <panoview h="180" v="0" fov="90"/>
    <!-- view parameters -->
    <view fisheye="0" limitview="range" hlookatmin="-180" hlookatmax="180" vlookatmin="-90" vlookatmax="90" maxpixelzoom="1.0" fovmax="128.571" fov="90" hlookat="180" vlookat="0"/>
    <autorotate horizon="0" tofov="90" waittime="1" speed="5"/>
    <!-- preview image -->
    <preview url="virtualtourdata/virtualtour1/preview.jpg" type="CUBESTRIP" striporder="FRBLUD" details="16"/>
    <!-- the pano itself -->
    <image type="CUBE" multires="true" tilesize="834" baseindex="0">
        <!-- tablet pc / ipad images -->
        <tablet>
            <left url="virtualtourdata/virtualtour1/3/tablet_face.jpg"/>
            <front url="virtualtourdata/virtualtour1/0/tablet_face.jpg"/>
            <right url="virtualtourdata/virtualtour1/1/tablet_face.jpg"/>
            <back url="virtualtourdata/virtualtour1/2/tablet_face.jpg"/>
            <up url="virtualtourdata/virtualtour1/4/tablet_face.jpg"/>
            <down url="virtualtourdata/virtualtour1/5/tablet_face.jpg"/>
        </tablet>
    </image>
    <!--************** Hotspots and lensflares ****************************************************-->
    <hotspot name="spot1" onclick="mainloadpano(virtualtour0.xml);" url="virtualtourdata/graphics/spots/spot0.png" ath="-179.493" atv="2.28169"/>
    <action name="hidepanospotsaction">
		set(hotspot[spot1].visible, false);
	</action>
    <action name="showpanospotsaction">
		set(hotspot[spot1].visible, true);
	</action>
    <!-- close all hotspots -->
</krpano>